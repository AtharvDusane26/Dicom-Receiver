<Window x:Class="DICOMReceiver.View.WorklistControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DICOMReceiver.View"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Worklist" Height="400" Width="700">
    <Grid>
        <DataGrid x:Name="StudyDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Study ID" Binding="{Binding StudyID}" Width="*" />
                <DataGridTextColumn Header="Patient Name" Binding="{Binding Patient.PatientName}" Width="*" />
                <DataGridTextColumn Header="Study Date" Binding="{Binding StudyDate}" Width="*" />
                <DataGridTextColumn Header="Description" Binding="{Binding StudyDescription}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
