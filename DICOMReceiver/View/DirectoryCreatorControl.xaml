<Window x:Class="DICOMReceiver.View.DirectoryCreatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DICOMReceiver.View"
             mc:Ignorable="d"  WindowStartupLocation="CenterScreen"
             Height="150" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBox x:Name="txtFolderPath" IsReadOnly="True" Height="30" Width="350" Margin="5"></TextBox>
            <Button x:Name="btnBrowse" Height="30" Width='120' Content="Browse"  Click="btnBrowse_Click"></Button>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Grid.Row="1">
            <Button x:Name="btnSaveAndClose" Content="Save" Height="30" Width='150'  Click="btnSaveAndClose_Click"></Button>

        </StackPanel>
    </Grid>
</Window>
